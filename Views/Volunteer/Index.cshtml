@model IEnumerable<VolunteerList>


<h1>Manage Volunteers</h1>

<div class="container p-5">
    @if (Model.Count() > 0)
    {
    <div class="row p-3">
        <div class="col">
            <h2 class="text-primary">Volunteer List</h2>
        </div>
        <div class="col text-right">
            <a asp-controller="Volunteer" asp-action="AddVolunteer" class="btn btn-primary">Add New Volunteer</a>
        </div>
    </div>
    }

    <br />

    <div class="row">
        <div class="col">
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Opportunity Center Preference</th>
                            <th>Approval Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var obj in Model)
                        {
                            <tr>
                                <td>@obj.FirstName</td>
                                <td>@obj.LastName</td>
                                <td>@obj.OpportunityCenterPreference</td>
                                <td>@obj.ApprovalStatus</td>
                                <td class="w-25 text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-controller="Volunteer" asp-route-Id="@obj.Id" asp-action="EditVolunteer" class="btn btn-primary">Edit</a>
                                        <a asp-controller="Volunteer" asp-route-Id="@obj.Id" asp-action="DeleteVolunteer" class="btn btn-danger">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else {
                <p>No results were found for that search term.</p>
            } 
        </div>
        <div class="col">

            <div class="search-container input-group my-2">
                <form asp-controller="Volunteer" asp-action="Index" class="form-inline">
                    <label for="search-title">Search by:</label>
                    <select name="option">
                        <option value="first-name">First Name</option>
                        <option value="last-name">Last Name</option>
                        <option value="center-preference">Center Preference</option>
                    </select>
                    <input type="text" class="form-control" placeholder="Search..." name="searchTerm">
                    <input type="submit" value="Filter" class="btn btn-outline-success my-2 my-sm-0" name="Search"/>
                </form>
            </div>

        


            @using (Html.BeginForm())
            {
                <text>Status:</text>@Html.DropDownList("status", new SelectList(ViewBag.ApprovalStatus))
                <input type="submit" value="Search" class="btn btn-primary" name="Filter" />
            }

            <button class="btn btn-primary my-3">View Volunteer Opportunity Matches</button>
            @using (Html.BeginForm())
            {
                <button type="submit" class="btn btn-danger my-3" value="reset" name="option">Reset Filters</button>
            }
        </div>
    </div>
</div>
