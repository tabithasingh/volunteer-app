                    </div>

                </div>
                <br />
                <div class="row">
                    <div class="col">
                        <label asp-for="Password"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                </div>
                <br />
                <div class="row">
                    <div class="col">
                        <label asp-for="OpportunityCenterPreference"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="OpportunityCenterPreference" class="form-control" />
                        <span asp-validation-for="OpportunityCenterPreference" class="text-danger"></span>
                    </div>

                </div>
                <br />
                <div class="row">
                    <div class="col">
                        <label asp-for="SkillsInterests"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="SkillsInterests" class="form-control" />
                        <span asp-validation-for="SkillsInterests" class="text-danger"></span>
                    </div>

                </div>
                <br />
                <div class="row">
                    <div class="col">
                        <label asp-for="Availability"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Availability" class="form-control" />
                        <span asp-validation-for="Availability" class="text-danger"></span>
                    </div>

                </div>
                <br />
                <div class="row">
                    <div class="col">
                        <label asp-for="Address"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                </div>
                <br />
                <div class="row">
                    <div class="col">
                        <label asp-for="Phonenumber"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Phonenumber" class="form-control" />
                        <span asp-validation-for="Phonenumber" class="text-danger"></span>
                    </div>

                </div>
                <br />
                <div class="row">
                    <div class="col">
                        <label asp-for="Email"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                </div>
                <br />
                <div class="row">
                    <div class="col">
                        <label asp-for="EducationBackground"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="EducationBackground" class="form-control" />
                        <span asp-validation-for="EducationBackground" class="text-danger"></span>
                    </div>

                </div>
                <br />
                <div class="row">
                    <div class="col">
                        <label asp-for="License"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="License" class="form-control" />
